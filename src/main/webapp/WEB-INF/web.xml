<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Servlet Definitions -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>presentation.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VehicleServlet</servlet-name>
        <servlet-class>presentation.VehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GPSTrackingServlet</servlet-name>
        <servlet-class>presentation.GPSTrackingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FuelMonitoringServlet</servlet-name>
        <servlet-class>presentation.FuelMonitoringServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MaintenanceServlet</servlet-name>
        <servlet-class>presentation.MaintenanceServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VehicleServlet</servlet-name>
        <url-pattern>/vehicles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GPSTrackingServlet</servlet-name>
        <url-pattern>/gps</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FuelMonitoringServlet</servlet-name>
        <url-pattern>/fuel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MaintenanceServlet</servlet-name>
        <url-pattern>/maintenance</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>